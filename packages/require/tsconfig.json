{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": [
        "typings/*"
      ]
    },
    "typeRoots": [
      "../../node_modules/@types/node",
      "../../node_modules/@truffle/provider/typings",
      "../../node_modules/@truffle/config/dist",
      "../../node_modules/@truffle/interface-adapter/dist",
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./types/**/*.d.ts"
  ]
}