{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "target": "es2016",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2017"],
    "paths": {
      "@truffle/contract-schema": ["./lib"],
      "@truffle/contract-schema/package.json": ["./package.json"],
      "@truffle/contract-schema/spec": ["./spec"],
      "@truffle/contract-schema/spec/*": ["./spec/*"]
    },
    "rootDir": ".",
    "typeRoots": [
      "../../node_modules/@types/mocha",
      "../../node_modules/@types/node"
    ],
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "include": [
    "./lib/**/*.ts",
    "./test/**/*.ts"
  ]
}
